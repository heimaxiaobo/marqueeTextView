<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.marqueeview.widget.MarqueeView
        android:id="@+id/tv_marquee"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:direction="left"
        app:isRepeat="true"
        app:marqueeBackground="#006CA7"
        app:speed="350"
        app:startPoint="end"
        app:textColor="#ffffff"
        app:textSize="25sp"/>

    <com.example.marqueeview.widget.MarqueeTextView
        android:id="@+id/mMarqueeTextView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        app:scroll_first_delay="2000"
        app:scroll_mode="mode_forever"
        app:scroll_speed="1100"/>

</LinearLayout>
