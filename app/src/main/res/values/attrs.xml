<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--跑马灯文字-->
    <declare-styleable name="MarqueeTextView">
        <attr name="scroll_speed" format="integer" />
        <attr name="scroll_first_delay" format="integer"/>
        <attr name="scroll_mode">
            <enum name="mode_forever" value="100"/>
            <enum name="mode_once" value="101"/>
        </attr>
    </declare-styleable>

    <!--滚动文字的-->
    <declare-styleable name="MarqueeView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="marqueeBackground" format="color"/>
        <attr name="isRepeat" format="boolean"/>
        <attr name="startPoint" format="enum">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>
        <attr name="direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="speed" format="integer"/>
    </declare-styleable>


</resources>